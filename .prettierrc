{
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "es5",
    "overrides": [
        {
            "files": "*.js",
            "options": {
                "tabWidth": 4,
                "bracketSpacing": false
            }
        },
        {
            "files": "*.scss",
            "options": {
                "parser": "scss",
                "tabWidth": 4,
                "semi": true
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 4
            }
        }
    ]
}